<%- include('partials/header') %>
<div class="container mx-auto mt-4 p-4 bg-white shadow-md rounded-lg">
    <div class="p-6">
        <h5 class="text-2xl font-bold mb-4 text-staples-red">Search for a User</h5>
        <p class="text-gray-700 mb-6">Enter an email to manage sessions and tokens.</p>
        <form action="/search-user" method="POST" class="flex flex-col sm:flex-row items-center w-full">
            <div class="w-full mb-2 sm:mb-0 sm:mr-2">
                <label for="email" class="sr-only">Email</label>
                <input type="email" class="form-input w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-staples-red focus:border-transparent" id="email" name="email" placeholder="Enter email address" required>
            </div>
            <button type="submit" class="w-full sm:w-auto bg-staples-red text-white py-3 px-6 rounded-md shadow-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-700 focus:ring-opacity-50">Search</button>
        </form>
    </div>
</div>
<% if (typeof email !== 'undefined' && email !== null && email !== "" && typeof users !== 'undefined' && users.length === 0) { %>
    <h4 class="text-red-500 mt-4 text-center">No users found. Please try again with a different email address!</h4>
<% } %>
<%- include('partials/footer') %>

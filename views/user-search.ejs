<%- include('partials/header') %>
<div class="container mx-auto mt-4 p-4 bg-white shadow-md rounded-lg">
    <div class="p-4">
        <h5 class="text-xl font-bold mb-2">Search for a User</h5>
        <p class="text-gray-700 mb-4">Enter an email to manage sessions and tokens.</p>
        <form action="/search-user" method="POST" class="flex flex-col sm:flex-row items-center">
            <div class="mb-2 sm:mb-0 sm:mr-2">
                <label for="email" class="sr-only">Email</label>
                <input type="email" class="form-input w-full sm:w-auto" id="email" name="email" placeholder="Email" required>
            </div>
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Search</button>
        </form>
    </div>
</div>
<% if (typeof email !== 'undefined' && email !== null && email !== "" && typeof users !== 'undefined' && users.length === 0) { %>
    <h4 class="text-red-500 mt-4">No users found. Please try again with a different email address!</h4>
<% } %>
<%- include('partials/footer') %>

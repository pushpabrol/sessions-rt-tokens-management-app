<%- include('partials/header') %>
<div class="container mx-auto mt-4">
    <a href="javascript:history.back()" class="bg-gray-500 text-white py-2 px-4 rounded mb-6 inline-block hover:bg-gray-700">Back</a>
    <h3 class="text-2xl font-bold mb-6 text-staples-red">User Management</h3>
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white rounded-lg shadow-md">
            <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                <tr>
                    <th class="py-3 px-6 text-left">Email</th>
                    <th class="py-3 px-6 text-left">User ID</th>
                    <th class="py-3 px-6 text-left">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                <% users.forEach(user => { %>
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left"><%= user.email %></td>
                        <td class="py-3 px-6 text-left"><%= user.user_id %></td>
                        <td class="py-3 px-6 text-left">
                            <div class="flex flex-col space-y-2">
                                <a href="/user-sessions/<%= user.user_id %>" class="text-blue-500 hover:underline">Manage Sessions</a>
                                <a href="/user-refresh-tokens/<%= user.user_id %>" class="text-blue-500 hover:underline">Manage Refresh Tokens</a>
                                <a href="/user-state/<%= user.user_id %>" class="text-blue-500 hover:underline">Manage User State</a>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>

<%- include('partials/header') %>
<div class="container mx-auto mt-4">
    <a href="javascript:history.back()" class="bg-gray-500 text-white py-2 px-4 rounded mb-3 inline-block hover:bg-gray-700">Back</a>
    <h3 class="text-xl font-bold mb-4">User Management</h3>
    <div class="space-y-4">
        <% users.forEach(user => { %>
            <div class="p-4 bg-white rounded shadow-md">
                <div class="flex justify-between items-center">
                    <h5 class="text-lg font-semibold"><%= user.email %></h5>
                    <small class="text-gray-500">User ID: <%= user.user_id %></small>
                </div>
                <div class="mt-3">
                    <a href="/user-sessions/<%= user.user_id %>" class="text-blue-500 hover:underline mr-3">Manage Sessions</a>
                    <a href="/user-refresh-tokens/<%= user.user_id %>" class="text-blue-500 hover:underline mr-3">Manage Refresh Tokens</a>
                    <a href="/user-state/<%= user.user_id %>" class="text-blue-500 hover:underline">Manage User State</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include('partials/footer') %>
